<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*" 
           Name="IFM-Ruta" 
           Language="1033" 
           Version="1.0.0" 
           Manufacturer="IFM-Ruta Team" 
           UpgradeCode="PUT-GUID-HERE">
    
    <Package InstallerVersion="200" 
              Compressed="yes" 
              InstallScope="perMachine" 
              Description="Interactive Feedback MCP Server" />
    
    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    <MediaTemplate EmbedCab="yes" />
    
    <Feature Id="ProductFeature" Title="IFM-Ruta" Level="1">
      <ComponentGroupRef Id="ProductComponents" />
    </Feature>
    
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder">
        <Directory Id="INSTALLFOLDER" Name="ifm-ruta">
          <Component Id="MainExecutable" Guid="*">
            <File Id="ifm-ruta-mcp.exe" 
                  Name="ifm-ruta-mcp.exe" 
                  Source="..\..\target\x86_64-pc-windows-gnu\release\ifm-ruta-mcp.exe" />
            <File Id="ifm-ruta-egui.exe" 
                  Name="ifm-ruta-egui.exe" 
                  Source="..\..\target\x86_64-pc-windows-gnu\release\ifm-ruta-egui.exe" />
            <File Id="README.md" 
                  Name="README.md" 
                  Source="..\..\README.md" />
            <File Id="LICENSE" 
                  Name="LICENSE" 
                  Source="..\..\LICENSE" />
          </Component>
        </Directory>
      </Directory>
      
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ProgramMenuDir" Name="IFM-Ruta">
          <Component Id="ProgramMenuDir" Guid="*">
            <RemoveFolder Id="ProgramMenuDir" On="uninstall"/>
            <RegistryValue Root="HKCU" Key="Software\IFM-Ruta" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
          </Component>
        </Directory>
      </Directory>
    </Directory>
    
    <ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
      <ComponentRef Id="MainExecutable" />
      <ComponentRef Id="ProgramMenuDir" />
    </ComponentGroup>
  </Product>
</Wix>
